{
    "name": "abr4xas/oauth2-twitch",
    "description": "This is my package oauth2-twitch",
    "keywords": [
        "abr4xas",
        "oauth2-twitch"
    ],
    "homepage": "https://github.com/abr4xas/oauth2-twitch",
    "license": "MIT",
    "authors": [
        {
            "name": "Angel",
            "email": "angel@tepuilabs.dev",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "league/oauth2-client": "^2.6"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "pestphp/pest": "^1.20",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Abr4xas\\Oauth2Twitch\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Abr4xas\\Oauth2Twitch\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
